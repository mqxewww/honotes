{
  "name": "hono-api",
  "version": "0.0.1",
  "description": "A Hono project where I try out some ideas that comes to mind.",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run --hot src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "db:generate": "bun --env-file=.env.development drizzle-kit generate",
    "db:push": "bun --env-file=.env.development drizzle-kit push",
    "lint": "eslint \"**/*.{js,ts,json}\"",
    "format": "prettier --write \"**/*.{js,ts,json}\""
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "better-sqlite3": "^12.6.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
